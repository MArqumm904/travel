@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model travel.Models.Bookingtb
@{

    var data = ViewBag.s;
    var d1 = data.PackageCountry;
    var d2 = data.PackageGuide;
    var d3 = data.PackageDate1;
    var d4 = data.PackageDate2;
    var d5 = data.PackageDate3;
    var d6 = data.PackagePrice;
    var d7 = data.PackageDays;
    var d8 = data.PackagePerson;
    var userId = UserManager.GetUserId(User);
    var usere = User.Identity.Name;



}


@section arqam {
    <div class="container-fluid bg-primary py-5 mb-5 hero-header">
        <div class="container py-5">
            <div class="row justify-content-center py-5">
                <div class="col-lg-10 pt-lg-5 mt-lg-5 text-center">
                    <h1 class="display-3 text-white animated slideInDown">Booking</h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb justify-content-center">
                            <li class="breadcrumb-item"><a href="#">Home</a></li>
                            <li class="breadcrumb-item"><a href="#">Pages</a></li>
                            <li class="breadcrumb-item text-white active" aria-current="page">Booking</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
}
@section navbar {

    <div class="navbar-nav ms-auto py-0">
        <a asp-action="index" class="nav-item nav-link">Home</a>
        <a asp-action="about" class="nav-item nav-link">About</a>
        <a asp-action="services" class="nav-item nav-link">Services</a>
        <a asp-action="packages" class="nav-item nav-link">Packages</a>
        <a asp-action="destination" class="nav-item nav-link">Destination</a>

        <a asp-action="contact" class="nav-item nav-link ">Contact</a>
    </div>

}

<link href="~/css/boook.css" rel="stylesheet" />



<div style="padding: 2vw 0vw;">
    <div id="multi-step-form-container">
        <!-- Form Steps / Progress Bar -->
        <ul class="form-stepper form-stepper-horizontal text-center mx-auto pl-0" style="padding: 1vw 20vw;">
            <!-- Step 1 -->
            <li class="form-stepper-active text-center form-stepper-list"
                step="1">
                <a class="mx-2">
                    <span class="form-stepper-circle">
                        <span>1</span>
                    </span>
                    <div class="label">Booking Detail </div>
                </a>
            </li>
            <!-- Step 2 -->
            <li class="form-stepper-unfinished text-center form-stepper-list"
                step="2">
                <a class="mx-2">
                    <span class="form-stepper-circle text-muted">
                        <span>2</span>
                    </span>
                    <div class="label text-muted">Personal Information</div>
                </a>
            </li>
            <!-- Step 3 -->
            <li class="form-stepper-unfinished text-center form-stepper-list"
                step="3">
                <a class="mx-2">
                    <span class="form-stepper-circle text-muted">
                        <span>3</span>
                    </span>
                    <div class="label text-muted">Payment Method</div>
                </a>
            </li>
        </ul>
        <!-- Step Wise Form Content -->
        <form asp-action="book" method="post">
            <!-- Step 1 Content -->
            <section id="step-1" class="form-step">
                <h3 class="font-normal">Booking Detail</h3>

                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <input type="hidden" asp-for="UserId" value="@userId" />

                        <div class="form-group">
                            <label asp-for="Destination" class="control-label"></label>
                            <input asp-for="Destination" value="@d1" class="form-control" readonly />
                            <span asp-validation-for="Destination" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Guider" class="control-label"></label>
                            <input asp-for="Guider" value="@d2" class="form-control" readonly />
                            <span asp-validation-for="Guider" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="DateTime" class="control-label"></label>
                            <select asp-for="DateTime" class="form-control">
                                <option selected disabled>Date & Time</option>
                                <option value="@d3">@d3</option>
                                <option value="@d4">@d4</option>
                                <option value="@d5">@d5</option>

                            </select>
                            <span asp-validation-for="DateTime" class="text-danger"></span>
                        </div>
                    </div>
                   
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Days" class="control-label"></label>
                            <input asp-for="Days" class="form-control" value="@d7" id="booking_Days" readonly />
                            <span asp-validation-for="Days" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Person" class="control-label"></label>
                            <input asp-for="Person" value="@d8" class="form-control" id="booking_Person" readonly/>
                            <span asp-validation-for="Person" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="TotalPrice" class="control-label"></label>
                            <input asp-for="TotalPrice" value="@d6" id="booking_TotalPrice" class="form-control" readonly />
                            <span asp-validation-for="TotalPrice"  class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <button class="button btn-navigate-form-step"
                            type="button"
                            step_number="2">
                        Next
                    </button>
                </div>
            </section>
            <!-- Step 2 Content, default hidden on page load. -->
            <section id="step-2" class="form-step d-none">
                <h3 class="font-normal">Personal Detail</h3>
                <div class="row">
                    <div class=" col-lg-7 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="FullName" class="control-label"></label>
                            <input asp-for="FullName" class="form-control" />
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-lg-7 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" value="@usere" class="form-control" readonly />

                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-lg-7 col-md-6 col-sm-12">
                        <div class="form-group">
                            <label asp-for="PhoneNumber" class="control-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button class="button btn-navigate-form-step"
                            type="button"
                            step_number="1">
                        Prev
                    </button>
                    <button class="button btn-navigate-form-step"
                            type="button"
                            step_number="3">
                        Next
                    </button>
                </div>
            </section>
            <!-- Step 3 Content, default hidden on page load. -->
            <section id="step-3" class="form-step d-none">
                <h3 class="font-normal">Payment Detail</h3>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <label asp-for="PaymentMethod">Select Payment Method:</label>
                        <select asp-for="PaymentMethod" onchange="toggleCreditCardInput()">
                            <option value="cash">Cash</option>
                            <option value="card">Card</option>
                        </select>
                    </div>
                    <div class=" col-lg-6 col-md-6 col-sm-12" id="creditCardInput" style="display:none;">
                        <div class="form-group">
                            <label asp-for="CreditCardNumber" class="control-label"></label>
                            <input asp-for="CreditCardNumber" class="form-control" />
                            <span asp-validation-for="CreditCardNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class=" col-lg-12 col-md-12 col-sm-12" id="cardPaymentForm">
                        <div class="form-group">
                            <label asp-for="Message" class="control-label"></label>
                            <textarea asp-for="Message" class="form-control" placeholder="Leave a message here"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <!-- Step 3 input fields -->




                <div class="mt-3">
                    <button class="button btn-navigate-form-step"
                            type="button"
                            step_number="2">
                        Prev
                    </button>
                    <input type="submit" value="Create" class="button submit-btn" />

                </div>
            </section>
        </form>
    </div>
</div>



<script src="~/js/book.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>

<script>
    function toggleCreditCardInput() {
        var paymentMethod = document.getElementById("PaymentMethod").value;
        var creditCardInput = document.getElementById("creditCardInput");

        if (paymentMethod === "card") {
            creditCardInput.style.display = "block";
        } else {
            creditCardInput.style.display = "none";
        }
    }

    
</script>