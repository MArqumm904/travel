                            </div>
                            <div class="text-center p-4">
                                <h5 class="mb-0">@item.GuideName</h5>
                                <small>@item.GuideDestination</small>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- Team End -->

}

