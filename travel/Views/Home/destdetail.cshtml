 @model travel.Models.Destinationtb

@{
    ViewData["Title"] = "destdetail";
    Layout = "adminlayout";

}

<div class="container">
    <div class="container">
       

        <div style="width:100%; height:100px; background-color:transparent;">
        </div>
        <h1>Destination Detail</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DestinationCountry)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DestinationCountry)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DestinationPrice)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DestinationPrice)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DestinationImage)
                </dt>
                <dd class="col-sm-10">
                    <img src="~/images/@Html.DisplayFor(model => model.DestinationImage)" style="height:100px; width:100px;" />

                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DestinationGuider)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DestinationGuider)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DestinationDate1)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DestinationDate1)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DestinationDate2)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DestinationDate2)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DestinationDate3)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DestinationDate3)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ActiveDestination)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ActiveDestination)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PopularDestination)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PopularDestination)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="editdest" asp-route-id="@Model?.DestinationId">Edit</a> |
            <a asp-action="destinationlist">Back to List</a>
        </div>

    </div>
</div>