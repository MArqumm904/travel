@model IEnumerable<travel.Models.Processtb>

@{
    ViewData["Title"] = "processlist";
    Layout = "adminlayout";

}


<div class="container">

    <div class="container">
        <div style="width:100%; height:100px; background-color:transparent;">
        </div>

        <h1>Process List</h1>
        <br />
        <p>
            <a asp-action="addprocess">Create New</a>
        </p>



        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProcessName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProcessDescription)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProcessImage)
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProcessName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProcessDescription)
                        </td>
                        <td>
                            <img src="../images/@Html.DisplayFor(modelItem => item.ProcessImage)" style="height:100px; width:100px;" />

                        </td>
                        <td>
                            <a asp-action="editpro" asp-route-id="@item.ProcessId">Edit</a> |
                            <a asp-action="processdetail" asp-route-id="@item.ProcessId">Details</a> |
                            <a asp-action="processdelete" asp-route-id="@item.ProcessId">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
